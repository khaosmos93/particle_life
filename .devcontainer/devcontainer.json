{
  "name": "particle-life",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "Particle Life Realtime",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "bash scripts/setup_venv.sh"
}
